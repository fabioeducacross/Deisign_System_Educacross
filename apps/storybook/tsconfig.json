{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@educacross/ui": [
                "../../packages/ui/src"
            ],
            "@educacross/ui/*": [
                "../../packages/ui/src/*"
            ]
        }
    },
    "include": [
        "stories/**/*",
        ".storybook/**/*",
        "../../packages/ui/src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "storybook-static"
    ]
}